{
	"name"			: "urbitech/confirmation-dialog",
	"type"			: "library",
	"description"	: "Extension for creating confirm action dialogs for various items for Nette Framework",
	"keywords"		: ["nette", "confirm action", "confirm dialog", "dialog", "confirmation", "ipub", "ipublikuj", "framework", "tools"],
	"homepage"		: "https://github.com/iPublikuj/confirmation-dialog",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "https://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/confirmation-dialog/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"confirmationDialog" : "IPub\\ConfirmationDialog\\DI\\ConfirmationDialogExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.1.0",

		"nette/application"	: "^3.0",
		"nette/di"			: "^3.0",
		"nette/forms"		: "^3.0",
		"nette/http"		: "^3.0",
		"nette/utils"		: "^3.0",

		"latte/latte"	: "^2.9"
	},

	"require-dev": {
		"nette/bootstrap"		: "^3.0",
		"nette/mail"			: "^3.0",
		"nette/robot-loader"	: "^3.0",
		"nette/safe-stream"		: "^2.4",
		"nette/tester"			: "^2.0",

		"tracy/tracy"	: "^2.6",

		"pds/skeleton"	: "~1.0"
	},

	"suggest": {
		"kdyby/translation"	: "If you wanna use translations in template and messages."
	},

	"autoload": {
		"psr-0": {
			"IPub\\ConfirmationDialog\\": "src/"
		}
	}
}
